{
	"name": "bindbc-harfbuzz",
	"authors": [ "Ahmet Sait" ],
	"description": "Dynamic and static bindings to HarfBuzz, compatible with -betterC, @nogc, and nothrow.",
	"copyright": "Copyright Â© 2020, Ahmet Sait",
	"license": "BSL-1.0",
	"targetType": "staticLibrary",
	"targetPath": "bin/$BUILD_TYPE-$PLATFORM-$ARCH",
	"sourcePaths": [ "src" ],
	"importPaths": [ "src" ],
	"dependencies": {
		"bindbc-freetype": {
			"version": ">=0.8.0",
			"optional": true,
		},
		"aurora-directx": {
			"version": ">=12.1.1",
			"optional": true,
		},
	},
	"configurations": [
		{
			"name": "dynamic",
			"dependencies": {
				"bindbc-loader": "~>0.2.1",
			},
		},
		{
			"name": "dynamicBC",
			"dependencies": {
				"bindbc-loader": "~>0.2.1",
			},
			"buildOptions": [ "betterC" ],
			"subConfigurations": {
				"bindbc-loader": "yesBC",
			},
		},
		{
			"name": "static",
			"versions": [ "BindHB_Static" ],
			"excludedSourceFiles": [ "source/bindbc/sdl/dynload.d" ],
		},
		{
			"name": "staticBC",
			"versions": [ "BindHB_Static" ],
			"buildOptions": [ "betterC" ],
			"excludedSourceFiles": [ "source/bindbc/sdl/dynload.d" ],
		},
	],
}

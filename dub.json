{
	"name": "bindbc-harfbuzz",
	"authors": [ "Ahmet Sait" ],
	"description": "Dynamic and static bindings to HarfBuzz, compatible with -betterC, @nogc, and nothrow.",
	"copyright": "Copyright Â© 2020, Ahmet Sait",
	"license": "BSL-1.0",
	"targetType": "staticLibrary",
	"targetPath": "bin/$BUILD_TYPE-$ARCH",
	"sourcePaths": [ "src" ],
	"importPaths": [ "src" ],
	"dependencies": {
		"bindbc-freetype": {
			"version": ">=0.8.0",
			"optional": true,
		},
		"aurora-directx": {
			"version": ">=12.1.1",
			"optional": true,
		},
	},
	"configurations": [
		{
			"name": "dynamic",
			"dependencies": {
				"bindbc-loader": "~>0.2.1",
			},
		},
		{
			"name": "dynamicBC",
			"dependencies": {
				"bindbc-loader": "~>0.2.1",
			},
			"buildOptions": [ "betterC" ],
			"subConfigurations": {
				"bindbc-loader": "yesBC",
			},
		},
		{
			"name": "static",
			"versions": [ "BindHB_Static" ],
			"excludedSourceFiles": [ "source/bindbc/sdl/dynload.d" ],
		},
		{
			"name": "staticBC",
			"versions": [ "BindHB_Static" ],
			"buildOptions": [ "betterC" ],
			"excludedSourceFiles": [ "source/bindbc/sdl/dynload.d" ],
		},
		{
			"name": "test_dynamic",
			"targetType": "executable",
			"targetPath": "bin/test_dynamic-$ARCH",
			"buildOptions": ["unittests", "debugMode", "debugInfo"],
			"sourcePaths": ["test"],
			"mainSourceFile": "test/app.d",
			"copyFiles-windows-x86": ["lib/*.dll"],
			"copyFiles-windows-x86_64": ["lib64/*.dll"],
			"versions": [
				"HB_2_6_3",
				"HB_with_deprecated",
				"HB_with_freetype",
				"HB_with_subset",
			],
			"versions-windows": [
				"HB_with_uniscribe",
			],
			"dependencies": {
				"bindbc-loader": "~>0.2.1",
				"bindbc-freetype": "~>0.8.0",
				"aurora-directx": "~>12.1.1",
			},
		},
		{
			"name": "test_static",
			"targetType": "executable",
			"targetPath": "bin/test_static-$ARCH",
			"buildOptions": ["unittests", "debugMode", "debugInfo"],
			"sourcePaths": ["test"],
			"mainSourceFile": "test/app.d",
			"excludedSourceFiles": [ "source/bindbc/sdl/dynload.d" ],
			"libs-windows-x86": [
				"lib/libharfbuzz-0",
				"lib/freetype",
			],
			"libs-windows-x86_64": [
				"lib64/libharfbuzz-0",
				"lib64/freetype",
			],
			"copyFiles-windows-x86": ["lib/*.dll"],
			"copyFiles-windows-x86_64": ["lib64/*.dll"],
			"versions": [
				"BindHB_Static",
				"HB_2_6_3",
				"HB_with_deprecated",
				"HB_with_freetype",
				"HB_with_subset",
			],
			"versions-windows": [
				"HB_with_uniscribe",
			],
			"dependencies": {
				"bindbc-loader": "~>0.2.1",
				"bindbc-freetype": "~>0.8.0",
				"aurora-directx": "~>12.1.1",
			},
		},
	],
}
